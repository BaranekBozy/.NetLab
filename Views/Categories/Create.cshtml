@model Wypozyczalnia_sprzetu_budowlanego.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj kategorię</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NazwaKategorii" class="control-label">Nazwa kategorii:</label>
                <input asp-for="NazwaKategorii" class="form-control" />
                <span asp-validation-for="NazwaKategorii" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wstecz</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
